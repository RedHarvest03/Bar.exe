<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Rolling" Height="250" Width="400">
    <Grid>
        <Canvas>

            <Button Height="30" Width="60" Canvas.Left="22" Canvas.Top="92" Content="Down" Name="Down" Click="Down_Click"
                ></Button>
            <Button Height="30" Width="60" Canvas.Right="22" Canvas.Top="92" Content="Up" Name="Up" Click="Up_Click"
                ></Button>
            <ProgressBar Height="30" Width="200" Canvas.Right="100" Canvas.Top="92" Name="Bar" HorizontalAlignment="Left" Canvas.Left="94" VerticalAlignment="Center"
                ></ProgressBar>
        </Canvas>

    </Grid>
</Window>
